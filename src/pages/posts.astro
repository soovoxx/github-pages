---
import Layout from "../layouts/Layout.astro";
import { getAllPosts, getPaginationMeta } from "../lib/posts";

const baseUrl = import.meta.env.BASE_URL?.replace(/\/$/, "") || "";
const posts = getAllPosts();

const pageSize = 10;
const { totalPages } = getPaginationMeta(posts.length, pageSize);
const serializedPosts = posts.map((post) => ({
  ...post,
  date: post.date.toISOString(),
}));
---
<Layout>
  <section class="post-section">
    <div class="page-header">
      <div>
        <p class="eyebrow">Posts</p>
        <h1>기록을 모아 둔 우주 정거장</h1>
      </div>
      <div class="counter">
        <p class="count">{posts.length}</p>
        <p class="label">전체 게시글</p>
      </div>
    </div>

    <div class="post-column-1">
      {posts.length === 0 ? (
        <p class="empty">등록된 글이 아직 없어요.</p>
      ) : (
        posts.slice(0, pageSize).map((post) => (
          <a class="post-row" href={`${baseUrl}/${post.slug}`}>
            <div class="row-meta">
              <p class="date">{post.date.toLocaleDateString("ko-KR")}</p>
              <h3>{post.title}</h3>
              <p class="summary">{post.summary}</p>
              <div class="tags">
                {post.tags.map((tag) => (
                  <span class="tag">#{tag}</span>
                ))}
              </div>
            </div>
          </a>
        ))
      )}
    </div>
  </section>

  <div class="pagination">
    {Array.from({ length: totalPages }).map((_, index) => {
      const page = index + 1;
      const isActive = page === 1;
      const href = `${baseUrl}/posts${page === 1 ? "" : `?page=${page}`}`;
      return (
        <a class={`page-link ${isActive ? "active" : ""}`} href={href} data-page={page}>
          {page}
        </a>
      );
    })}
  </div>

  <script id="post-data" type="application/json">
    {JSON.stringify(serializedPosts).replace(/</g, "\\u003c")}
  </script>

  <script is:inline>
    const baseUrl = "{baseUrl}";
    const posts = JSON.parse(document.getElementById("post-data").textContent || "[]");
    const pageSize = {pageSize};
    const totalPages = Math.max(1, Math.ceil(posts.length / pageSize));

    const postContainer = document.querySelector(".post-column-1");
    const paginationLinks = Array.from(document.querySelectorAll(".pagination .page-link"));

    function clampPage(page) {
      return Math.min(Math.max(page, 1), totalPages);
    }

    function getPageFromSearch() {
      const searchParams = new URLSearchParams(window.location.search);
      const pageValue = Number.parseInt(searchParams.get("page") || "1", 10);
      return clampPage(Number.isFinite(pageValue) ? pageValue : 1);
    }

    function renderPosts(page) {
      if (!postContainer) return;
      const currentPage = clampPage(page);
      const start = (currentPage - 1) * pageSize;
      const visiblePosts = posts.slice(start, start + pageSize);

      if (visiblePosts.length === 0) {
        postContainer.innerHTML = '<p class="empty">등록된 글이 아직 없어요.</p>';
        return;
      }

      const items = visiblePosts
        .map((post) => {
          const dateLabel = new Date(post.date).toLocaleDateString("ko-KR");
          const tags = Array.isArray(post.tags) ? post.tags : [];
          return `
            <a class="post-row" href="${baseUrl}/${post.slug}">
              <div class="row-meta">
                <p class="date">${dateLabel}</p>
                <h3>${post.title}</h3>
                <p class="summary">${post.summary}</p>
                <div class="tags">
                  ${tags.map((tag) => `<span class="tag">#${tag}</span>`).join("")}
                </div>
              </div>
            </a>
          `;
        })
        .join("");

      postContainer.innerHTML = items;
    }

    function updatePagination(page) {
      const currentPage = clampPage(page);
      paginationLinks.forEach((link) => {
        const pageValue = Number.parseInt(link.dataset.page || "1", 10) || 1;
        link.href = `${baseUrl}/posts${pageValue === 1 ? "" : `?page=${pageValue}`}`;
        if (pageValue === currentPage) {
          link.classList.add("active");
        } else {
          link.classList.remove("active");
        }
      });
    }

    function setPage(page, pushState = false) {
      const currentPage = clampPage(page);
      const nextParams = new URLSearchParams(window.location.search);
      if (currentPage === 1) {
        nextParams.delete("page");
      } else {
        nextParams.set("page", String(currentPage));
      }
      const newSearch = nextParams.toString();
      const newUrl = `${window.location.pathname}${newSearch ? `?${newSearch}` : ""}`;
      if (pushState) {
        window.history.pushState({}, "", newUrl);
      } else {
        window.history.replaceState({}, "", newUrl);
      }
      renderPosts(currentPage);
      updatePagination(currentPage);
    }

    paginationLinks.forEach((link) => {
      link.addEventListener("click", (event) => {
        const pageValue = Number.parseInt(link.dataset.page || "1", 10) || 1;
        if (pageValue <= 0) return;
        event.preventDefault();
        setPage(pageValue, true);
      });
    });

    window.addEventListener("popstate", () => {
      setPage(getPageFromSearch(), false);
    });

    setPage(getPageFromSearch());
  </script>
</Layout>

<style>
  .page-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
    gap: 18px;
    background: color-mix(in srgb, var(--panel) 90%, transparent);
    border-radius: 28px;
    padding: 26px 32px;
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
    box-shadow: 0 18px 42px var(--shadow);
  }

  .page-header h1 {
    margin: 4px 0 8px;
  }
  .counter {
    background: var(--panel);
    border-radius: 18px;
    padding: 14px 16px;
    min-width: 120px;
    text-align: center;
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
  }

  .count {
    margin: 0;
    font-size: 2rem;
    font-weight: 800;
  }

  .label {
    margin: 4px 0 0;
    color: var(--muted);
    font-weight: 600;
  }

  .post-section {
    margin-top: 28px;
    background: color-mix(in srgb, var(--panel) 92%, transparent);
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
    border-radius: 24px;
    padding: 22px;
    box-shadow: 0 16px 38px var(--shadow);
  }

  .section-heading {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    flex-wrap: wrap;
    margin-bottom: 16px;
  }

  .section-heading h2 {
    margin: 4px 0;
  }

  .muted {
    margin: 0;
    color: var(--muted);
  }

  .badge {
    display: inline-flex;
    align-items: center;
    padding: 8px 12px;
    border-radius: 12px;
    background: color-mix(in srgb, var(--accent) 16%, transparent);
    color: var(--text);
    font-weight: 700;
  }

  .post-row:hover {
    transform: translateY(-2px);
    box-shadow: 0 16px 34px var(--shadow);
  }

  .row-meta h3 {
    margin: 6px 0 6px;
  }

  .date {
    margin: 0;
    color: var(--muted);
    font-size: 0.95rem;
    font-weight: 700;
    letter-spacing: 0.02em;
  }

  .summary {
    margin: 0;
    color: var(--muted);
    line-height: 1.5;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: 8px;
  }

  .tag {
    padding: 4px 8px;
    border-radius: 10px;
    background: color-mix(in srgb, var(--text) 6%, transparent);
    color: var(--text);
    font-size: 0.9rem;
    letter-spacing: 0.02em;
  }

  .post-column-1 {
    display: grid;
    gap: 12px;
  }

  .post-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 8px;
    padding: 16px;
    border-radius: 16px;
    background: var(--panel);
    border: 1px solid color-mix(in srgb, var(--text) 8%, transparent);
    text-decoration: none;
    color: var(--text);
    box-shadow: 0 14px 28px var(--shadow);
    transition: transform 0.16s ease, box-shadow 0.2s ease;
  }

  .empty {
    margin: 0;
    color: var(--muted);
  }

  .pagination {
    margin: 22px 0 0;
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .page-link {
    padding: 10px 18px;
    border-radius: 12px;
    border: 1px solid color-mix(in srgb, var(--text) 12%, transparent);
    text-decoration: none;
    color: var(--text);
    background: var(--panel);
    box-shadow: 0 10px 24px var(--shadow);
  }

  .page-link.active {
    background: var(--accent);
    color: #ffffff;
    font-weight: 800;
  }

  @media (max-width: 720px) {
    .page-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .counter {
      width: 100%;
      text-align: left;
    }
  }
</style>
