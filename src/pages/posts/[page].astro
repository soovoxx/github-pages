---
import Layout from "../../layouts/Layout.astro";
import { getAllPosts, getPaginationMeta } from '../../lib/post'
import { POSTS_PER_PAGE } from '../../constants'

// GitHub Pages용 baseUrl (예: /github-pages)
const baseUrl = import.meta.env.BASE_URL?.replace(/\/$/, "") || "";

const posts = getAllPosts();

const { totalPages } = getPaginationMeta(posts.length, POSTS_PER_PAGE);

const rawPage = Astro.params.page;
const requestedPage = Number.parseInt(rawPage ?? "1", 10) || 1;
const currentPage = Math.min(Math.max(requestedPage, 1), totalPages);

const start = (currentPage - 1) * POSTS_PER_PAGE;
const visiblePosts = posts.slice(start, start + POSTS_PER_PAGE);

export async function getStaticPaths() {
  const totalPages = getPaginationMeta(getAllPosts().length, POSTS_PER_PAGE).totalPages;

  return Array.from({ length: totalPages }).map((_, i) => ({
    params: { page: String(i + 1) },
  }));
}
---

<Layout>
  <section class="post-section">
    <div class="page-header">
      <div>
        <p class="eyebrow">Posts</p>
        <h1>기록을 모아 둔 우주 정거장</h1>
      </div>
      <div class="counter">
        <p class="count">{posts.length}</p>
        <p class="label">전체 게시글</p>
      </div>
    </div>

    <div class="post-column-1">
      {visiblePosts.length === 0 ? (
        <p class="empty">등록된 글이 아직 없어요.</p>
      ) : (
        visiblePosts.map((post) => (
          <a class="post-row" href={`${baseUrl}/${post.slug}`}>
            <div class="row-meta">
              <p class="date">{post.date.toLocaleDateString("ko-KR")}</p>
              <h3>{post.title}</h3>
              <p class="summary">{post.summary}</p>
              <div class="tags">
                {post.tags.map((tag) => (
                  <span class="tag">#{tag}</span>
                ))}
              </div>
            </div>
          </a>
        ))
      )}
    </div>
  </section>

  <div class="pagination">
    {Array.from({ length: totalPages }).map((_, index) => {
      const page = index + 1;
      const isActive = page === currentPage;
      const href = `${baseUrl}/posts/${page}`;
      return (
        <a class={`page-link ${isActive ? "active" : ""}`} href={href}>
          {page}
        </a>
      );
    })}
  </div>
</Layout>

<style>
  .page-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
    gap: 18px;
    background: color-mix(in srgb, var(--panel) 90%, transparent);
    border-radius: 28px;
    padding: 26px 32px;
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
    box-shadow: 0 18px 42px var(--shadow);
  }

