    margin: 0;
    color: var(--muted);
    line-height: 1.5;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: 8px;
  }

  .tag {
    padding: 4px 8px;
    border-radius: 10px;
    background: color-mix(in srgb, var(--text) 6%, transparent);
    color: var(--text);
    font-size: 0.9rem;
    letter-spacing: 0.02em;
  }

  .post-column-1 {
    display: grid;
    gap: 12px;
  }

  .post-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 8px;
    padding: 16px;
    border-radius: 16px;
    background: var(--panel);
    border: 1px solid color-mix(in srgb, var(--text) 8%, transparent);
    text-decoration: none;
    color: var(--text);
    box-shadow: 0 14px 28px var(--shadow);
    transition: transform 0.16s ease, box-shadow 0.2s ease;
  }

  .pagination {
    margin: 22px 0 0;
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .page-link {
    min-width: 14px;
    max-height: 30px;
    line-height: 30px;
    padding: 10px 18px;
    border-radius: 12px;
    border: 1px solid color-mix(in srgb, var(--text) 12%, transparent);
    text-decoration: none;
    color: var(--text);
    background: var(--panel);
    box-shadow: 0 10px 24px var(--shadow);
    text-align: center;
  }

  .page-link.active {
    background: var(--accent);
    color: #ffffff;
    font-weight: 800;
  }

  @media (max-width: 720px) {
    .page-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .counter {
      width: 100%;
      text-align: left;
    }
  }
</style>