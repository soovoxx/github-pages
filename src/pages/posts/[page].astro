---
import Layout from "@/layouts/Layout.astro";
import { getAllPosts, getPaginationMeta } from "@/lib/post";
import { baseUrl, POSTS_PER_PAGE } from "@/constants";
import PostItem from "@/components/posts/PostItem.astro";

// GitHub Pages용 baseUrl (예: /github-pages)
const posts = getAllPosts();

const { totalPages } = getPaginationMeta(posts.length, POSTS_PER_PAGE);

const rawPage = Astro.params.page;
const requestedPage = Number.parseInt(rawPage ?? "1", 10) || 1;
const currentPage = Math.min(Math.max(requestedPage, 1), totalPages);

const start = (currentPage - 1) * POSTS_PER_PAGE;
const visiblePosts = posts.slice(start, start + POSTS_PER_PAGE);

export async function getStaticPaths() {
  const totalPages = getPaginationMeta(
    getAllPosts().length,
    POSTS_PER_PAGE,
  ).totalPages;

  return Array.from({ length: totalPages }).map((_, i) => ({
    params: { page: String(i + 1) },
  }));
}
---

<Layout>
  <section class="post-section">
    <div class="page-header">
      <div class="post-left-section">
        <p class="eyebrow">All Posts</p>
        <h1>기록이 머무는 곳</h1>
      </div>
      <div class="counter">
        <p class="count">{posts.length}</p>
        <p class="label">전체 게시글</p>
      </div>
    </div>

    <div class="post-column-1">
      {
        visiblePosts.length === 0 ? (
          <p class="empty">등록된 글이 아직 없어요.</p>
        ) : (
          visiblePosts.map((post) => <PostItem post={post} />)
        )
      }
    </div>
  </section>

  <div class="pagination">
    {
      Array.from({ length: totalPages }).map((_, index) => {
        const page = index + 1;
        const isActive = page === currentPage;
        const href = `${baseUrl}/posts/${page}`;
        return (
          <a class={`page-link ${isActive ? "active" : ""}`} href={href}>
            {page}
          </a>
        );
      })
    }
  </div>
</Layout>

