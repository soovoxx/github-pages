    margin: 0;
    font-size: 2rem;
    font-weight: 800;
  }

  .label {
    margin: 4px 0 0;
    color: var(--muted);
    font-weight: 600;
  }

  .post-section {
    margin-top: 28px;
    background: color-mix(in srgb, var(--panel) 92%, transparent);
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
    border-radius: 24px;
    padding: 22px;
    box-shadow: 0 16px 38px var(--shadow);
  }

  .section-heading {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    flex-wrap: wrap;
    margin-bottom: 16px;
  }

  .section-heading h2 {
    margin: 4px 0;
  }

  .muted {
    margin: 0;
    color: var(--muted);
  }

  .badge {
    display: inline-flex;
    align-items: center;
    padding: 8px 12px;
    border-radius: 12px;
    background: color-mix(in srgb, var(--accent) 16%, transparent);
    color: var(--text);
    font-weight: 700;
  }

  .post-row:hover {
    transform: translateY(-2px);
    box-shadow: 0 16px 34px var(--shadow);
  }

  .row-meta h3 {
    margin: 6px 0 6px;
  }

  .date {
    margin: 0;
    color: var(--muted);
