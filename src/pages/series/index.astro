---
import Layout from "@/layouts/Layout.astro";
import { getSeriesGroups } from "@/lib/post";
import { baseUrl } from "@/constants";

const seriesList = getSeriesGroups();
---

<Layout>
  <section class="series-section">
    <div class="page-header">
      <div>
        <p class="eyebrow">Series</p>
        <h1>주제별로 묶어보기</h1>
        <p class="lede">연관된 글을 시리즈별로 모아두었습니다.</p>
      </div>
      <div class="counter">
        <p class="count">{seriesList.length}</p>
        <p class="label">시리즈</p>
      </div>
    </div>

    {
      seriesList.length === 0 ? (
        <p class="empty">시리즈로 묶인 글이 아직 없어요.</p>
      ) : (
        <div class="series-grid">
          {seriesList.map((series) => (
            <a class="series-card" href={`${baseUrl}/series/${series.slug}`}>
              <div>
                <p class="series-name">{series.name}</p>
                <p class="series-count">{series.posts.length}개의 글</p>
              </div>
            </a>
          ))}
        </div>
      )
    }
  </section>
</Layout>

<style lang="scss">
  .series-section {
    margin-top: 28px;
    background: color-mix(in srgb, var(--panel) 92%, transparent);
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
    border-radius: 24px;
    padding: 22px;
    box-shadow: 0 16px 38px var(--shadow);
  }

  .page-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
    gap: 18px;
    background: color-mix(in srgb, var(--panel) 90%, transparent);
    border-radius: 22px;
    padding: 24px 28px;
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
    box-shadow: 0 14px 32px var(--shadow);
  }

  .page-header h1 {
    margin: 4px 0 6px;
  }

  .lede {
    margin: 0;
    color: var(--muted);
  }

  .counter {
    background: var(--panel);
    border-radius: 16px;
    padding: 12px 14px;
    min-width: 120px;
    text-align: center;
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
  }

  .count {
    margin: 0;
    font-size: 1.6rem;
    font-weight: 700;
  }

  .label {
    margin: 4px 0 0;
    color: var(--muted);
    font-weight: 700;
  }

  .series-grid {
    display: grid;
    gap: 14px;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  }

  .series-card {
    display: block;
    padding: 16px;
    border-radius: 16px;
    background: var(--panel);
    text-decoration: none;
    color: var(--text);
    border: 1px solid color-mix(in srgb, var(--text) 8%, transparent);
    box-shadow: 0 12px 28px var(--shadow);
    transition:
      transform 0.15s ease,
      box-shadow 0.2s ease;
  }

  .series-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 16px 32px var(--shadow);
  }

  .series-name {
    margin: 0 0 4px;
    font-weight: 700;
  }

  .series-count {
    margin: 0;
    color: var(--muted);
  }

  .empty {
    margin: 12px 0 0;
    color: var(--muted);
  }

  @media (max-width: 720px) {
    .page-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
