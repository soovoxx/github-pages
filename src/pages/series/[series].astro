---
import Layout from "../../layouts/Layout.astro";
import { getSeriesGroups } from "../../lib/post";
import type { SeriesGroup } from "../../lib/post";
import { baseUrl } from "../../constants";
import PostItem from "../../components/posts/PostItem.astro";

export async function getStaticPaths() {
  return getSeriesGroups().map((series) => ({
    params: { series: series.slug },
    props: { series },
  }));
}

const { series } = Astro.props as { series: SeriesGroup };
---

<Layout>
  <section class="series-section">
    <div class="page-header">
      <div>
        <p class="eyebrow">Series</p>
        <h1>{series.name}</h1>
        <p class="lede">{series.posts.length}개의 글을 모았습니다.</p>
      </div>
      <a class="back" href={`${baseUrl}/series`}>모든 시리즈 보기</a>
    </div>

    <div class="post-list">
      {series.posts.map((post) => <PostItem post={post} />)}
    </div>
  </section>
</Layout>

<style>
  .series-section {
    margin-top: 28px;
    background: color-mix(in srgb, var(--panel) 92%, transparent);
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
    border-radius: 24px;
    padding: 22px;
    box-shadow: 0 16px 38px var(--shadow);
  }

  .page-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
    gap: 18px;
    background: color-mix(in srgb, var(--panel) 90%, transparent);
    border-radius: 22px;
    padding: 24px 28px;
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
    box-shadow: 0 14px 32px var(--shadow);
  }

  .page-header h1 {
    margin: 4px 0 6px;
  }

  .lede {
    margin: 0;
    color: var(--muted);
  }

  .back {
    text-decoration: none;
    color: var(--text);
    font-weight: 700;
    padding: 10px 12px;
    border-radius: 12px;
    background: var(--panel);
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
    box-shadow: 0 10px 22px var(--shadow);
  }

  .post-list {
    display: grid;
    gap: 12px;
  }

  @media (max-width: 720px) {
    .page-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .back {
      width: 100%;
      text-align: center;
    }
  }
</style>
