---
import Layout from '../layouts/Layout.astro';
import type { Post } from '../types';

const baseUrl = import.meta.env.BASE_URL?.replace(/\/$/, '') || '';

export async function getStaticPaths() {
  const posts: Post[] = Object.values(import.meta.glob('../post/*.md', { eager: true }));

  return posts
    .filter((post) => Boolean(post.frontmatter.slug))
    .map((post) => ({
      params: { slug: post.frontmatter.slug },
      props: { post },
    }));
}

const { post } = Astro.props;
const { Content, frontmatter: { pubDate, title, summary } } = post;
const tags = post.frontmatter.tags || [];
---

<Layout>
  <article class="post">
    <a class="back" href={`${baseUrl}/posts`}>
      Posts로 돌아가기
    </a>
    <p class="eyebrow">{new Date(pubDate).toLocaleDateString('ko-KR')}</p>
    <h1>{title}</h1>
    <div class="tags">
      {tags.map((t) => (<span class="tag">#{t}</span>))}
    </div>
    <div class="content">
      <Content />
    </div>
  </article>
</Layout>

<style>
  .post {
    max-width: 900px;
    margin: 0 auto;
    background: color-mix(in srgb, var(--panel) 88%, transparent);
    padding: 30px 44px;
    border-radius: 24px;
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
    box-shadow: 0 18px 40px var(--shadow);
  }

  .back {
    display: inline-block;
    margin-bottom: 16px;
    color: var(--muted);
    text-decoration: none;
  }

  .back:hover {
    text-decoration: underline;
  }

  .eyebrow {
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-weight: 700;
    color: var(--muted);
  }

  h1 {
    margin: 15px 0;
  }

  /* h2, h3, h4, h5, h6 margin-top zero fix */

  .tags{
    display: flex;
    gap: 5px;
    justify-content: flex-end;
    padding: 10px 0;
    color: var(--muted);
  }

  .tag{
    font-size: 0.9em;
    padding: 3px 6px;
    background-color: color-mix(in srgb, var(--text) 5%, transparent);
    border-radius: 10px;
    letter-spacing: 0.05em;
  }

  .content {
    display: grid;
    gap: 10px;
    line-height: 1.7;
    color: var(--text);
  }

  .content p {
    margin: 0 0 0.85em;
  }

  .content :is(h2, h3, h4, h5, h6) {
    margin: 0.9em 0 0.55em;
    line-height: 1.35;
  }

  .content :is(ul, ol) {
    margin: 0.35em 0 0.85em;
    padding-left: 1.2em;
  }

  .content li + li {
    margin-top: 0.32em;
  }

  .content pre {
    background: var(--code-bg);
    padding: 14px 16px;
    border-radius: 14px;
    overflow-x: auto;
    border: 1px solid var(--code-border);
  }

  :global(body[data-theme='dark']) {
    background: #292b30;
  }

  :global(body[data-theme='dark']) .post {
    background: color-mix(in srgb, var(--panel) 82%, transparent);
    border-color: color-mix(in srgb, var(--text) 12%, transparent);
  }

  :global(body[data-theme='dark']) .content pre {
    background: #1a1d25;
    border-color: color-mix(in srgb, var(--text) 18%, transparent);
  }

  @media (max-width: 900px) {
    .post {
      padding: 22px;
    }
  }
</style>
