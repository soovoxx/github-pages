<style>
  .about-hero {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 32px;
    align-items: center;
    padding: 32px;
    background: color-mix(in srgb, var(--panel) 90%, transparent);
    border-radius: 28px;
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
    box-shadow: 0 20px 50px var(--shadow);
  }

  .hero-text {
    display: grid;
    gap: 14px;
  }

  .eyebrow {
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--muted);
    font-weight: 700;
  }

  h1 {
    margin: 0;
    font-size: clamp(1.8rem, 3vw, 2.6rem);
  }

  .lede {
    margin: 0;
    color: var(--muted);
    line-height: 1.6;
  }

  .cta-row {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .pill {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 18px;
    border-radius: 14px;
    background: var(--accent);
    color: #1f1028;
    text-decoration: none;
    font-weight: 700;
    box-shadow: 0 12px 28px var(--shadow);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .pill:hover {
    transform: translateY(-2px);
    box-shadow: 0 16px 32px var(--shadow);
  }

  .ghost {
    background: var(--panel);
    color: var(--text);
    border: 1px solid color-mix(in srgb, var(--text) 12%, transparent);
  }

  .hero-visual {
    display: grid;
    justify-items: center;
    gap: 12px;
  }

  .orbit {
    position: relative;
    width: min(360px, 100%);
    aspect-ratio: 1;
    border-radius: 50%;
    background: radial-gradient(circle at 30% 30%, #ffe3f3 0%, #f6b1d8 45%, #d65ab0 90%);
    box-shadow: 0 16px 40px var(--shadow);
    overflow: hidden;
  }

  .planet {
    position: absolute;
    width: 38%;
    aspect-ratio: 1;
    border-radius: 50%;
    top: 24%;
    left: 24%;
    background: linear-gradient(135deg, #fff9ff, #f7c8ff);
    filter: drop-shadow(0 10px 25px rgba(0, 0, 0, 0.14));
  }

  .satellite {
    position: absolute;
    width: 18%;
    aspect-ratio: 1;
    border-radius: 50%;
    right: 14%;
    bottom: 20%;
    background: linear-gradient(145deg, #fff7f7, #ffd1ef);
    box-shadow: 0 10px 24px var(--shadow);
  }

  .caption {
    margin: 0;
    color: var(--muted);
    font-weight: 600;
  }

  .about-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 18px;
    margin-top: 26px;
  }

  .card {
    background: color-mix(in srgb, var(--panel) 92%, transparent);
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
    border-radius: 24px;
    padding: 22px;
    box-shadow: 0 16px 36px var(--shadow);
  }

  .card h2,
  .card h3 {
    margin: 0 0 10px;
  }

  .card p {
    margin: 0 0 10px;
    color: var(--text);
    line-height: 1.6;
  }

  .stat-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 12px;
    margin-top: 6px;
  }

  .stat {
    padding: 14px;
    border-radius: 14px;
    background: var(--panel);
    border: 1px solid color-mix(in srgb, var(--text) 8%, transparent);
  }

  .stat-value {
    margin: 0;
    font-weight: 800;
  }

  .stat-label {
    margin: 4px 0 0;
    color: var(--muted);
    font-size: 0.95rem;
  }

  .focus ul {
    padding-left: 18px;
    margin: 0;
    display: grid;
    gap: 8px;
  }

  .focus li {
    line-height: 1.6;
  }

  .contact-links {
    display: grid;
    gap: 8px;
    margin-top: 10px;
  }

  .contact a {
    color: var(--text);
    text-decoration: none;
    font-weight: 700;
  }

  .contact a:hover {
    text-decoration: underline;
  }

  @media (max-width: 880px) {
    .about-hero {
      grid-template-columns: 1fr;
    }

    .hero-visual {
      order: -1;
    }
  }

  @media (max-width: 640px) {
    .about-hero {
      padding: 24px;
    }
  }
</style>
