---
import { baseUrl } from "@/constants";
import Layout from "@/layouts/Layout.astro";

const posts = `${baseUrl}/posts/1`;
---

<Layout>
  <section class="wip-banner" aria-label="페이지 공사중 안내">
    <span class="pill label">공사중</span>
    <p class="message">
      이 페이지는 작업 중입니다. 내용이 추가·변경될 수 있어요.
    </p>
  </section>
</Layout>

<style lang="scss">
  .wip-banner {
    display: grid;
    gap: 6px;
    align-items: center;
    grid-template-columns: auto 1fr;
    padding: 12px 14px;
    margin: 0 0 16px;
    border-radius: 14px;
    border: 1px dashed color-mix(in srgb, var(--text) 16%, transparent);
    background: color-mix(in srgb, var(--accent) 12%, transparent);
    box-shadow: 0 8px 18px var(--shadow);

    .label {
      background: color-mix(in srgb, var(--accent) 65%, var(--panel) 35%);
      color: var(--text);
      padding: 6px 10px;
      border-radius: 10px;
      font-weight: 800;
      letter-spacing: 0.04em;
      text-transform: uppercase;
    }

    .message {
      margin: 0;
      color: var(--muted);
      font-weight: 700;
    }
  }

  .about-hero {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 32px;
    align-items: center;
    padding: 32px;
    background: color-mix(in srgb, var(--panel) 90%, transparent);
    border-radius: 28px;
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
    box-shadow: 0 20px 50px var(--shadow);
  }

  .hero-text {
    display: grid;
    gap: 14px;
  }

  h1 {
    margin: 0;
    font-size: clamp(1.8rem, 3vw, 2.6rem);
  }

  .cta-row {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .pill {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 18px;
    border-radius: 14px;
    background: var(--accent);
    color: #ffffff;
    text-decoration: none;
    font-weight: 700;
    box-shadow: 0 12px 28px var(--shadow);
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;

    &:hover {
      transform: translateY(-2px);
      box-shadow: 0 16px 32px var(--shadow);
    }
  }

  .ghost {
    background: var(--panel);
    color: var(--text);
    border: 1px solid color-mix(in srgb, var(--text) 12%, transparent);
  }

  .hero-visual {
    display: grid;
    justify-items: center;
    gap: 12px;
  }

  .planet {
    position: relative;
    width: min(360px, 100%);
    aspect-ratio: 1;
    border-radius: 50%;
    background: radial-gradient(
      circle at 30% 30%,
      #f5edff 0%,
      #c7b8ff 45%,
      #9f8cfb 90%
    );
    box-shadow: 0 16px 40px var(--shadow);
    overflow: hidden;
  }

  .ring {
    position: absolute;
    inset: 42% -18% auto -18%;
    height: 40px;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0.75),
      rgba(255, 255, 255, 0)
    );
    border-radius: 50%;
    transform: rotate(-12deg);
    filter: blur(1px);
  }

  .sparkle {
    position: absolute;
    width: 12px;
    height: 12px;
    background: #fbf8ff;
    top: 18%;
    right: 16%;
    border-radius: 4px;
    transform: rotate(20deg);
    box-shadow:
      -30px 40px 0 2px rgba(251, 248, 255, 0.9),
      24px 70px 0 2px rgba(251, 248, 255, 0.7);
  }

  .caption {
    margin: 0;
    color: var(--muted);
    font-weight: 700;
  }

  .about-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 18px;
    margin-top: 26px;
  }

  .card {
    background: color-mix(in srgb, var(--panel) 92%, transparent);
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
    border-radius: 24px;
    padding: 22px;
    box-shadow: 0 16px 36px var(--shadow);
  }

  .card h2,
  .card h3 {
    margin: 0 0 10px;
  }

  .card p {
    margin: 0 0 10px;
    color: var(--text);
    line-height: 1.6;
  }

  .stat-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 12px;
    margin-top: 6px;
  }

  .stat {
    padding: 14px;
    border-radius: 14px;
    background: var(--panel);
    border: 1px solid color-mix(in srgb, var(--text) 8%, transparent);
  }

  .stat-value {
    margin: 0;
    font-weight: 700;
  }

  .stat-label {
    margin: 4px 0 0;
    color: var(--muted);
    font-size: 0.95rem;
  }

  .focus ul {
    padding-left: 18px;
    margin: 0;
    display: grid;
    gap: 8px;
  }

  .focus li {
    line-height: 1.6;
  }

  .contact-links {
    display: grid;
    gap: 8px;
    margin-top: 10px;
  }

  .contact a {
    color: var(--text);
    text-decoration: none;
    font-weight: 700;

    &:hover {
      text-decoration: underline;
    }
  }

  @media (max-width: 880px) {
    .about-hero {
      grid-template-columns: 1fr;
    }

    .hero-visual {
      order: -1;
    }
  }

  @media (max-width: 640px) {
    .about-hero {
      padding: 24px;
    }
  }
</style>
