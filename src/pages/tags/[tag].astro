---
import Layout from "../../layouts/Layout.astro";
import { getAllPosts } from "../../lib/post";

// GitHub Pages용 baseUrl (예: /github-pages)
const baseUrl = import.meta.env.BASE_URL?.replace(/\/$/, "") || "";

const rawTag = Astro.params.tag ?? "";
const currentTag = decodeURIComponent(rawTag);

const tagsPageTitle = currentTag.charAt(0).toUpperCase() + currentTag.slice(1);

const posts = getAllPosts().filter((post) => post.tags.includes(currentTag));

export async function getStaticPaths() {
  const tags = Array.from(
    new Set(getAllPosts().flatMap((post) => post.tags || []))
  );

  return tags.map((tag) => ({
    params: { tag },
  }));
}
---

<Layout>
  <section class="post-section">
    <div class="page-header">
      <div>
        <p class="eyebrow">Tag</p>
        <h1>#{tagsPageTitle}</h1>
      </div>
      <div class="counter">
        <p class="count">{posts.length}</p>
        <p class="label">해당 태그 게시글</p>
      </div>
    </div>

    <div class="post-column-1">
      {posts.length === 0 ? (
        <p class="empty">등록된 글이 아직 없어요.</p>
      ) : (
        posts.map((post) => (
          <a class="post-row" href={`${baseUrl}/${post.slug}`}>
            <div class="row-meta">
              <p class="date">{post.date.toLocaleDateString("ko-KR")}</p>
              <h3>{post.title}</h3>
              <p class="summary">{post.summary}</p>
              <div class="tags">
                {post.tags.map((tag) => (
                  <span class="tag">#{tag}</span>
                ))}
              </div>
            </div>
          </a>
        ))
      )}
    </div>
  </section>
</Layout>

<style>
  .page-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
    gap: 18px;
    background: color-mix(in srgb, var(--panel) 90%, transparent);
    border-radius: 28px;
    padding: 26px 32px;
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
    box-shadow: 0 18px 42px var(--shadow);
  }

  .page-header h1 {
    margin: 4px 0 8px;
  }

  .counter {
    background: var(--panel);
    border-radius: 18px;
    padding: 14px 16px;
    min-width: 120px;
    text-align: center;
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
  }

  .count {
    margin: 0;
    font-size: 2rem;
    font-weight: 700;
  }

  .label {
    margin: 4px 0 0;
    color: var(--muted);
    font-weight: 700;
  }

  .post-section {
    margin-top: 28px;
    background: color-mix(in srgb, var(--panel) 92%, transparent);
    border: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
    border-radius: 24px;
    padding: 22px;
    box-shadow: 0 16px 38px var(--shadow);
  }

  .section-heading {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    flex-wrap: wrap;
    margin-bottom: 16px;
  }

  .section-heading h2 {
    margin: 4px 0;
  }

  .muted {
    margin: 0;
    color: var(--muted);
  }

  .badge {
    display: inline-flex;
    align-items: center;
    padding: 8px 12px;
    border-radius: 12px;
    background: color-mix(in srgb, var(--accent) 16%, transparent);
    color: var(--text);
    font-weight: 700;
  }

  .post-row:hover {
    transform: translateY(-2px);
    box-shadow: 0 16px 34px var(--shadow);
  }

  .row-meta h3 {
    margin: 6px 0 6px;
  }

  .date {
    margin: 0;
    color: var(--muted);
    font-size: 0.95rem;
    font-weight: 700;
    letter-spacing: 0.02em;
  }

  .summary {
    margin: 0;
    color: var(--muted);
    line-height: 1.5;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: 8px;
  }

  .tag {
    padding: 4px 8px;
    border-radius: 10px;
    background: color-mix(in srgb, var(--text) 6%, transparent);
    color: var(--text);
    font-size: 0.9rem;
    letter-spacing: 0.02em;
    text-decoration: none;
  }

  .post-column-1 {
    display: grid;
    gap: 12px;
  }

  .post-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 8px;
    padding: 16px;
    border-radius: 16px;
    background: var(--panel);
    border: 1px solid color-mix(in srgb, var(--text) 8%, transparent);
    text-decoration: none;
    color: var(--text);
    box-shadow: 0 14px 28px var(--shadow);
    transition: transform 0.16s ease, box-shadow 0.2s ease;
  }

  @media (max-width: 720px) {
    .page-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .counter {
      width: 100%;
      text-align: left;
    }
  }
</style>
