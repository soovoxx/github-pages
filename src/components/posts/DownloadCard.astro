---
import { baseUrl } from "@/constants";

interface Props {
  href: string;
  label: string;
  description?: string;
  size?: string;
  downloadName?: string;
}

const { href, label, description, size, downloadName } = Astro.props as Props;

const isExternal = /^https?:\/\//.test(href);
const hasBase = baseUrl && (href === baseUrl || href.startsWith(`${baseUrl}/`));
const normalizedHref = isExternal
  ? href
  : hasBase
    ? href
    : `${baseUrl}${href.startsWith("/") ? href : `/${href}`}`;
---

<a
  class="download-card"
  href={normalizedHref}
  download={downloadName ?? true}
  aria-label={`${label} 다운로드`}
>
  <span class="icon" aria-hidden="true">
    <svg viewBox="0 0 24 24" role="img">
      <path
        d="M12 3a1 1 0 0 1 1 1v8.17l2.59-2.58a1 1 0 1 1 1.41 1.42l-4.3 4.29a1 1 0 0 1-1.4 0l-4.3-4.29a1 1 0 1 1 1.41-1.42L11 12.17V4a1 1 0 0 1 1-1Zm-7 14a1 1 0 0 1 1-1h12a1 1 0 1 1 0 2H6a1 1 0 0 1-1-1Z"
        fill="currentColor"></path>
    </svg>
  </span>
  <span class="meta">
    <span class="label">{label}</span>
    {description && <span class="desc">{description}</span>}
  </span>
  {size && <span class="size">{size}</span>}
</a>

<style>
  .download-card {
    display: flex;
    align-items: center;
    width: fit-content;
    max-width: 100%;
    gap: 14px;
    padding: 14px 16px;
    border-radius: 14px;
    border: 1px solid color-mix(in srgb, var(--text) 14%, transparent);
    background: color-mix(in srgb, var(--bg) 85%, transparent);
    text-decoration: none;
    color: inherit;
    transition:
      border-color 0.2s ease,
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .download-card:hover {
    transform: translateY(-1px);
    border-color: color-mix(in srgb, var(--accent) 50%, transparent);
    box-shadow: 0 12px 26px var(--shadow);
  }

  .icon {
    width: 38px;
    height: 38px;
    border-radius: 12px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: color-mix(in srgb, var(--accent) 20%, transparent);
    color: var(--accent);
  }

  .icon svg {
    width: 20px;
    height: 20px;
  }

  .meta {
    display: grid;
    gap: 4px;
    min-width: 0;
  }

  .label {
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  .desc {
    font-size: 0.9rem;
    color: color-mix(in srgb, var(--text) 70%, transparent);
  }

  .size {
    font-size: 0.85rem;
    color: color-mix(in srgb, var(--text) 60%, transparent);
  }
</style>
