---
import { baseUrl, BLOG_NAME } from "@/constants";
import Finder from "../component/Finder.astro";
import SearchOverlay from "./SearchOverlay.astro";

const about = `${baseUrl}/about`;
const posts = `${baseUrl}/posts/1`;
const series = `${baseUrl}/series`;
---

<header class="site-header">
  <div class="nav-bar">
    <a class="brand" href={baseUrl}>{BLOG_NAME}</a>
    <nav class="nav-links">
      <a href={about}>About</a>
      <a href={posts}>Posts</a>
      <a href={series}>Series</a>
      <button
        type="button"
        class="icon-button"
        data-search-open
        aria-label="검색 열기"
      >
        <Finder size={18} stroke="var(--text)" weight={36} />
      </button>
      <button
        type="button"
        id="themeToggle"
        class="toggle"
        aria-label="Toggle theme"
      >
        <!-- sun icon -->
        <svg
          viewBox="0 0 24 24"
          class="icon sun-icon"
          aria-hidden="true"
          focusable="false"
          xmlns="http://www.w3.org/2000/svg"
        >
          <!-- 배경 투명, 해 아이콘 -->
          <circle
            cx="12"
            cy="12"
            r="4"
            fill="none"
            stroke="#1E1E2D"
            stroke-width="2"></circle>
          <!-- 위, 아래, 좌, 우 -->
          <line
            x1="12"
            y1="3"
            x2="12"
            y2="5"
            stroke="#1E1E2D"
            stroke-width="2"
            stroke-linecap="round"></line>
          <line
            x1="12"
            y1="19"
            x2="12"
            y2="21"
            stroke="#1E1E2D"
            stroke-width="2"
            stroke-linecap="round"></line>
          <line
            x1="3"
            y1="12"
            x2="5"
            y2="12"
            stroke="#1E1E2D"
            stroke-width="2"
            stroke-linecap="round"></line>
          <line
            x1="19"
            y1="12"
            x2="21"
            y2="12"
            stroke="#1E1E2D"
            stroke-width="2"
            stroke-linecap="round"></line>

          <!-- 대각선 방향(시계방향 11 1 5 7) -->
          <line
            x1="5.5"
            y1="5.5"
            x2="7"
            y2="7"
            stroke="#1E1E2D"
            stroke-width="2"
            stroke-linecap="round"></line>
          <line
            x1="17"
            y1="7"
            x2="18.5"
            y2="5.5"
            stroke="#1E1E2D"
            stroke-width="2"
            stroke-linecap="round"></line>
          <line
            x1="17"
            y1="17"
            x2="18.5"
            y2="18.5"
            stroke="#1E1E2D"
            stroke-width="2"
            stroke-linecap="round"></line>
          <line
            x1="5.5"
            y1="18.5"
            x2="7"
            y2="17"
            stroke="#1E1E2D"
            stroke-width="2"
            stroke-linecap="round"></line>
        </svg>

        <!-- moon icon -->
        <svg
          class="icon moon-icon"
          viewBox="0 0 24 24"
          aria-hidden="true"
          focusable="false"
        >
          <path
            d="M21 13.06A9 9 0 0 1 11 3a1 1 0 0 1 1.22-1 9 9 0 1 0 9.78 9.78 1 1 0 0 1-1 1.22Z"
            fill="currentColor"></path>
        </svg>
      </button>
    </nav>
  </div>
</header>

<SearchOverlay />

<style lang="scss">
  .site-header {
    position: sticky;
    top: 0;
    z-index: 10;
    background: color-mix(in srgb, var(--bg) 94%, transparent);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid color-mix(in srgb, var(--text) 10%, transparent);
  }

  .nav-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 0;
    gap: 24px;
    width: min(1100px, 80vw);
    margin: 0 auto;
  }

  .brand {
    font-size: 1.4rem;
    font-weight: 300;
    text-decoration: none;
    color: var(--text);
    letter-spacing: 0.02em;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .nav-links a {
    padding: 10px 14px;
    text-decoration: none;
    color: var(--text);
    border-radius: 12px;
    font-weight: 300;
    transition:
      background 0.2s ease,
      color 0.2s ease,
      transform 0.2s ease;
  }

  .nav-links a:hover {
    background: color-mix(in srgb, var(--accent) 10%, transparent);
  }

  .icon-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 12px;
    border: 1px solid color-mix(in srgb, var(--text) 18%, transparent);
    background: var(--panel);
    color: var(--text);
    cursor: pointer;
    transition:
      transform 0.2s ease,
      box-shadow 0.25s ease;
    box-shadow: 0 10px 22px var(--shadow);
  }

  .icon-button:hover {
    transform: translateY(-1px);
    box-shadow: 0 14px 28px var(--shadow);
  }

  .toggle {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    border: 1px solid color-mix(in srgb, var(--text) 18%, transparent);
    background: var(--panel);
    color: var(--text);
    border-radius: 12px;
    padding: 10px 14px;
    cursor: pointer;
    font-weight: 300;
    transition:
      transform 0.2s ease,
      box-shadow 0.25s ease;
    box-shadow: 0 10px 25px var(--shadow);
  }

  .icon {
    width: 20px;
    height: 20px;
    transition:
      opacity 0.2s ease,
      transform 0.25s ease;
  }

  .toggle:hover .icon {
    transform: translateY(-1px) rotate(-5deg);
  }

  .sun-icon {
    opacity: 0;
    transform-origin: center;
  }

  .moon-icon {
    opacity: 0;
    transform-origin: center;
  }

  :global(:root[data-theme="light"]) .sun-icon {
    opacity: 1;
    transform: none;
  }

  :global(:root[data-theme="dark"]) .moon-icon {
    opacity: 1;
    transform: none;
  }

  @media (max-width: 720px) {
    .nav-bar {
      width: 90vw;
    }

    .nav-links {
      gap: 8px;
    }

    .nav-links a,
    .toggle {
      padding: 8px 12px;
    }
  }
</style>
