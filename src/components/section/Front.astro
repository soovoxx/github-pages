---
interface Props {
  link?: string;
  text?: string;
}

const { link = "/", text = "" } = Astro.props;
---

<a class="front" href={link}>
  {text}
  <svg
    class="front-icon"
    viewBox="0 0 20 20"
    aria-hidden="true"
    focusable="false"
  >
    <path
      d="M6 4.5 11.5 10 l-5.5 5.5"
      fill="none"
      stroke="currentColor"
      stroke-width="1.6"
      stroke-linecap="round"
      stroke-linejoin="round"></path>
  </svg>
</a>
<style>
  .front {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 16px;
    color: var(--muted);
    text-decoration: none;
  }

  .front:hover {
    text-decoration: underline;
  }

  .front-icon {
    width: 18px;
    height: 18px;
  }
</style>
