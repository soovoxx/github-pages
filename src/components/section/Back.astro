---
interface Props {
  link?: string;
  text?: string;
}

const { link = "/", text = "" } = Astro.props;
---

<a class="back" href={link}>
  <svg
    class="back-icon"
    viewBox="0 0 20 20"
    aria-hidden="true"
    focusable="false"
  >
    <path
      d="M11.5 4.5 6 10l5.5 5.5"
      fill="none"
      stroke="currentColor"
      stroke-width="1.6"
      stroke-linecap="round"
      stroke-linejoin="round"></path>
  </svg>
  {text}
</a>
<style>
  .back {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 16px;
    color: var(--muted);
    text-decoration: none;
  }

  .back:hover {
    text-decoration: underline;
  }

  .back-icon {
    width: 18px;
    height: 18px;
  }
</style>
