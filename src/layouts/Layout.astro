---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Milky Way</title>
  </head>
  <body data-theme="light">
    <div class="page">
      <Header />

      <main class="content">
        <slot />
      </main>

      <Footer />
    </div>

    <script>
      const storageKey = 'soovoxx-theme';
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      const savedTheme = localStorage.getItem(storageKey);
      const body = document.body;
      const toggleBtn = document.getElementById('themeToggle');
      const setLabel = (theme: string) => {
        toggleBtn?.setAttribute('aria-label', `Switch to ${theme === 'light' ? 'dark' : 'light'} mode`);
      };
      const applyTheme = (theme: string) => {
        body.dataset.theme = theme;
        localStorage.setItem(storageKey, theme);
        setLabel(theme);
      };
      applyTheme(savedTheme || (prefersDark ? 'dark' : 'light'));
      toggleBtn?.addEventListener('click', () => {
        const next = body.dataset.theme === 'light' ? 'dark' : 'light';
        applyTheme(next);
      });
    </script>
  </body>
</html>

<style>
  :root {
    --bg: #ffffff;
    --panel: #ffffff;
    --text: #31253b;
    --muted: #6a4b76;
    --accent: #ef7ab8;
    --shadow: rgba(49, 37, 59, 0.12);
    --code-bg: #f3edf8;
    --code-border: rgba(49, 37, 59, 0.12);
  }

  body[data-theme='dark'] {
    --bg: #292b30;
    --panel: #15161c;
    --text: #f4f5f7;
    --muted: #c4c8d1;
    --accent: #ff8ad4;
    --shadow: rgba(0, 0, 0, 0.4);
    --code-bg: #1e222b;
    --code-border: color-mix(in srgb, var(--text) 16%, transparent);
  }

  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    min-height: 100%;
    background: var(--bg);
    color: var(--text);
    transition: background 0.3s ease, color 0.3s ease;
  }

  .page {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main.content {
    padding: 38px 0 56px;
    flex: 1;
    width: min(1200px, 80vw);
    margin: 0 auto;
  }

  @media (max-width: 720px) {
    main.content {
      width: 90vw;
    }
  }
</style>
